{% extends "layout.jinja2" %} 

{% block content%}
<div class="content">
 <form method="post">
  <div class="form-group">
    <input type="text" class="form-control" name="query"  placeholder="Search" value="{{ query }}">
  </div>
  <button type="submit" class="btn btn-success btn-block">Search</button>
</form>
