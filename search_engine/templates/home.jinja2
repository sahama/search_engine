{#    {{ page_index }}#}

{% if results %}
    <label class="label" for="results">Results:</label>

    <table class="table" id="results">
    {% for result in results %}
        <tr>
        <td>
        <a href="{{ page_index[result[0]] }}"> {{ page_index[result[0]] }}</a> <br>
            words: {{ result[1] }}
        </td>
        </tr>
    {% endfor %}
    </table>
{% endif %}
</div>
{% endblock content %}
